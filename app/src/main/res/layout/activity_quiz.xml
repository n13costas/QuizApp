                android:onClick="onCheckboxClicked7"
                android:text="Nagasaki"
                android:textColor="@color/colorFonts"
                android:textSize="@dimen/fontMedium" />
        </LinearLayout>

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/radioGroup8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible">
            <RadioButton android:id="@+id/radio80"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked8"
                android:text="Bill Clinton"
                android:textColor="@color/colorFonts"
                android:textSize="@dimen/fontMedium" />
            <RadioButton android:id="@+id/radio81"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked8"
                android:text="Barack Obama"
                android:textColor="@color/colorFonts"
                android:textSize="@dimen/fontMedium" />
            <RadioButton android:id="@+id/radio82"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked8"
                android:text="Donald Trump"
                android:textColor="@color/colorFonts"
                android:textSize="@dimen/fontMedium" />
            <RadioButton android:id="@+id/radio83"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked8"
                android:text="Hilary Clinton"
                android:textColor="@color/colorFonts"
                android:textSize="@dimen/fontMedium" />
        </RadioGroup>

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/radioGroup9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible">
            <RadioButton android:id="@+id/radio90"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked9"
                android:text="1981"
                android:textColor="@color/colorFonts"
                android:textSize="@dimen/fontMedium" />
            <RadioButton android:id="@+id/radio91"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked9"
                android:text="1989"
                android:textColor="@color/colorFonts"
                android:textSize="@dimen/fontMedium" />
            <RadioButton android:id="@+id/radio92"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked9"
                android:text="1999"
                android:textColor="@color/colorFonts"
                android:textSize="@dimen/fontMedium" />
            <RadioButton android:id="@+id/radio93"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked9"
                android:text="2004"
                android:textColor="@color/colorFonts"
                android:textSize="@dimen/fontMedium" />
        </RadioGroup>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sports_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/quiz_question"
        android:layout_marginBottom="@dimen/spaceLarge"
        android:layout_marginLeft="@dimen/spaceLarge"
        android:layout_marginRight="@dimen/spaceLarge"
        android:layout_marginTop="0dp"
        android:padding="@dimen/spaceLarge"
        android:visibility="invisible">

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/radioGroup10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">
            <RadioButton android:id="@+id/radio100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked10"
                android:text="Barcelona"
                android:textColor="@color/colorFonts"
                android:textSize="@dimen/fontMedium" />
            <RadioButton android:id="@+id/radio101"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked10"
                android:text="AC Milan"
                android:textColor="@color/colorFonts"
                android:textSize="@dimen/fontMedium" />
            <RadioButton android:id="@+id/radio102"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked10"
                android:text="Manchester United"
                android:textColor="@color/colorFonts"
                android:textSize="@dimen/fontMedium" />
            <RadioButton android:id="@+id/radio103"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked10"
                android:text="Real Madrid"
                android:textColor="@color/colorFonts"
                android:textSize="@dimen/fontMedium" />
        </RadioGroup>

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/radioGroup11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible">
            <RadioButton android:id="@+id/radio110"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked11"
                android:text="LeBron James"
                android:textColor="@color/colorFonts"
                android:textSize="@dimen/fontMedium" />
            <RadioButton android:id="@+id/radio111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked11"
                android:text="Giannis Antetokounbo"
                android:textColor="@color/colorFonts"
                android:textSize="@dimen/fontMedium" />
            <RadioButton android:id="@+id/radio112"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked11"
                android:text="Nikos Galis"
                android:textColor="@color/colorFonts"
                android:textSize="@dimen/fontMedium" />
            <RadioButton android:id="@+id/radio113"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked11"
                android:text="James Harden"
                android:textColor="@color/colorFonts"
                android:textSize="@dimen/fontMedium" />
        </RadioGroup>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/checkGroup12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible">
            <CheckBox android:id="@+id/checkbox_brazil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxClicked12"
                android:text="Brazil"
                android:textColor="@color/colorFonts"
                android:textSize="@dimen/fontMedium" />
            <CheckBox android:id="@+id/checkbox_germany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxClicked12"
                android:text="Germany"
                android:textColor="@color/colorFonts"
                android:textSize="@dimen/fontMedium" />
            <CheckBox android:id="@+id/checkbox_argentina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxClicked12"
                android:text="Argentina"
                android:textColor="@color/colorFonts"
                android:textSize="@dimen/fontMedium" />
            <CheckBox android:id="@+id/checkbox_italy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxClicked12"
                android:text="Italy"
                android:textColor="@color/colorFonts"
                android:textSize="@dimen/fontMedium" />
        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/button_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_submit"
        android:layout_alignBottom="@+id/button_submit"
        android:layout_alignEnd="@+id/geography_layout"
        android:background="@drawable/roundedbuttons"
        android:onClick="nextQuestion"
        android:text="@string/next_text"
        android:textSize="@dimen/fontSmall" />

    <Button
        android:id="@+id/button_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_submit"
        android:layout_alignBottom="@+id/button_submit"
        android:layout_alignStart="@+id/geography_layout"
        android:background="@drawable/roundedbuttons"
        android:onClick="previousQuestion"
        android:text="@string/back_text"
        android:textSize="@dimen/fontSmall" />

    <Button
        android:id="@+id/button_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/spaceMedium"
        android:background="@drawable/roundedbuttonsubmit"
        android:onClick="returnHome"
        android:text="@string/submit_text"
        android:textSize="@dimen/fontSmall"
        android:visibility="invisible" />

</RelativeLayout>