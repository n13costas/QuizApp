                android:onClick="onRadioButtonClicked5"
                android:text="Michelangelo"
                android:textColor="@color/colorFonts"
                android:textSize="@dimen/fontMedium" />
            <RadioButton android:id="@+id/radio53"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked5"
                android:text="Vincent Van Gogh"
                android:textColor="@color/colorFonts"
                android:textSize="@dimen/fontMedium" />
        </RadioGroup>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/checkGroup6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible">
            <CheckBox android:id="@+id/checkbox_lee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxClicked6"
                android:text="Christofer Lee"
                android:textColor="@color/colorFonts"
                android:textSize="@dimen/fontMedium" />
            <CheckBox android:id="@+id/checkbox_redford"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxClicked6"
                android:text="Robert Redford"
                android:textColor="@color/colorFonts"
                android:textSize="@dimen/fontMedium" />
            <CheckBox android:id="@+id/checkbox_mckellen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxClicked6"
                android:text="Ian McKellen"
                android:textColor="@color/colorFonts"
                android:textSize="@dimen/fontMedium" />
            <CheckBox android:id="@+id/checkbox_mortensen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxClicked6"
                android:text="Vigo Mortensen"
                android:textColor="@color/colorFonts"
                android:textSize="@dimen/fontMedium" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/history_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/quiz_question"
        android:layout_marginBottom="@dimen/spaceLarge"
        android:layout_marginLeft="@dimen/spaceLarge"
        android:layout_marginRight="@dimen/spaceLarge"
        android:layout_marginTop="0dp"
        android:padding="@dimen/spaceLarge"
        android:visibility="invisible">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/checkGroup7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible">
            <CheckBox android:id="@+id/checkbox_hiroshima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxClicked7"
                android:text="Hiroshima"
                android:textColor="@color/colorFonts"
                android:textSize="@dimen/fontMedium" />
            <CheckBox android:id="@+id/checkbox_tokyo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxClicked7"
