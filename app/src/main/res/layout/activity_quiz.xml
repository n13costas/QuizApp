<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:contentDescription="Application Background"
        android:scaleType="centerCrop"
        android:src="@drawable/abstract1" />

    <TextView
        android:id="@+id/quiz_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="@dimen/spaceLarge"
        android:layout_marginRight="@dimen/spaceLarge"
        android:layout_marginTop="@dimen/spaceLarge"
        android:background="#666"
        android:padding="@dimen/spaceLarge"
        android:shadowRadius="24"
        android:text="Header TextView"
        android:textAlignment="center"
        android:textColor="@color/colorFonts"
        android:textSize="@dimen/fontLarge" />

    <TextView
        android:id="@+id/quiz_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/quiz_header"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="@dimen/spaceLarge"
        android:layout_marginRight="@dimen/spaceLarge"
        android:layout_marginTop="0dp"
        android:background="#999"
        android:padding="@dimen/spaceLarge"
        android:shadowRadius="24"
        android:text="Question TextView"
        android:textAlignment="textStart"
        android:textColor="@color/colorFonts"
        android:textSize="@dimen/fontMedium" />

    <RelativeLayout
        android:id="@+id/geography_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/quiz_question"
        android:layout_marginBottom="@dimen/spaceLarge"
        android:layout_marginLeft="@dimen/spaceLarge"
        android:layout_marginRight="@dimen/spaceLarge"
        android:layout_marginTop="0dp"
        android:padding="@dimen/spaceLarge"
        android:visibility="visible">

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/radioGroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible">
            <RadioButton android:id="@+id/radio10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spaceSmall"
                android:onClick="onRadioButtonClicked1"
                android:text="Kalamata"
                android:textColor="@color/colorFonts"
                android:textSize="@dimen/fontMedium" />
            <RadioButton android:id="@+id/radio11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spaceSmall"
                android:onClick="onRadioButtonClicked1"
                android:text="Patra"
                android:textColor="@color/colorFonts"
                android:textSize="@dimen/fontMedium" />
            <RadioButton android:id="@+id/radio12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spaceSmall"
                android:onClick="onRadioButtonClicked1"
                android:text="Athens"
                android:textColor="@color/colorFonts"
                android:textSize="@dimen/fontMedium" />
            <RadioButton android:id="@+id/radio13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spaceSmall"
                android:onClick="onRadioButtonClicked1"
                android:text="Piraeus"
                android:textColor="@color/colorFonts"
                android:textSize="@dimen/fontMedium" />
        </RadioGroup>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/checkGroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible">
            <CheckBox android:id="@+id/checkbox_cyprus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxClicked1"
                android:text="Cyprus"
                android:textColor="@color/colorFonts"
                android:textSize="@dimen/fontMedium" />
            <CheckBox android:id="@+id/checkbox_finland"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxClicked1"
                android:text="Finland"
                android:textColor="@color/colorFonts"
                android:textSize="@dimen/fontMedium" />
            <CheckBox android:id="@+id/checkbox_malta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxClicked1"
                android:text="Malta"
                android:textColor="@color/colorFonts"
                android:textSize="@dimen/fontMedium" />
            <CheckBox android:id="@+id/checkbox_iceland"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxClicked1"
                android:text="Iceland"
                android:textColor="@color/colorFonts"
                android:textSize="@dimen/fontMedium" />
        </LinearLayout>

        <EditText
            android:id="@+id/text_view_usa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"
            android:inputType="number"
            android:textColor="@color/colorFonts"/>

    </RelativeLayout>

    <RelativeLayout
