                android:textColor="@color/colorFonts"
                android:textSize="@dimen/fontMedium" />
            <CheckBox android:id="@+id/checkbox_fukushima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxClicked7"
                android:text="Fukushima"
                android:textColor="@color/colorFonts"
                android:textSize="@dimen/fontMedium" />
            <CheckBox android:id="@+id/checkbox_nagasaki"
