<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/cherry_cream_soda</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">@dimen/buttonSize</item>
        <item name="android:layout_height">@dimen/buttonSize</item>
        <item name="android:padding">@dimen/spaceSmall</item>
        <item name="android:textSize">@dimen/fontSmall</item>
        <item name="android:textColor">@color/colorFonts</item>
    </style>

</resources>
